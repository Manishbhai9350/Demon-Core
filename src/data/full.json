        {
          "type": "audio",
          "audio": "/transcripts/audio2.mp3",
          "start": 23,
          "end": 28,
          "text": "Following the accidents, hands-on criticality testing was discontinued."
        },
        {
          "type": "audio",
          "audio": "/transcripts/audio2.mp3",
          "start": 28,
          "end": 31,
          "text": "The core itself was melted down and repurposed."
        },
